---
import Header from '../components/Header.astro'
import Aside from '../components/Aside.astro'

const { pageTitle } = Astro.props
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://db.onlinewebfonts.com" crossorigin />
    <style>
      @font-face {
        font-family: 'Maison Neue';
        src: url('https://db.onlinewebfonts.com/t/2173dceabf0710a335c0bca178efc162.eot');
        src:
          url('https://db.onlinewebfonts.com/t/2173dceabf0710a335c0bca178efc162.eot?#iefix') format('embedded-opentype'),
          url('https://db.onlinewebfonts.com/t/2173dceabf0710a335c0bca178efc162.woff') format('woff'),
          url('https://db.onlinewebfonts.com/t/2173dceabf0710a335c0bca178efc162.woff2') format('woff2'),
          url('https://db.onlinewebfonts.com/t/2173dceabf0710a335c0bca178efc162.ttf') format('truetype'),
          url('https://db.onlinewebfonts.com/t/2173dceabf0710a335c0bca178efc162.svg#Maison Neue') format('svg');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Maison Neue';
        src: url('https://db.onlinewebfonts.com/t/4a373e70cd01dec089c1dd1185ceba51.eot');
        src:
          url('https://db.onlinewebfonts.com/t/4a373e70cd01dec089c1dd1185ceba51.eot?#iefix') format('embedded-opentype'),
          url('https://db.onlinewebfonts.com/t/4a373e70cd01dec089c1dd1185ceba51.woff') format('woff'),
          url('https://db.onlinewebfonts.com/t/4a373e70cd01dec089c1dd1185ceba51.woff2') format('woff2'),
          url('https://db.onlinewebfonts.com/t/4a373e70cd01dec089c1dd1185ceba51.ttf') format('truetype'),
          url('https://db.onlinewebfonts.com/t/4a373e70cd01dec089c1dd1185ceba51.svg#Maison Neue Bold') format('svg');
        font-weight: bold;
        font-style: normal;
        font-display: swap;
      }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap" rel="stylesheet" />
    <title>{pageTitle ? `${pageTitle} - Nymoréa` : 'Nymoréa'}</title>
    <meta name="description" content="Nymoréa Website" />
    <meta name="author" content="Nymoréa" />
    <meta name="distribution" content="global" />
  </head>
  <body class="bg-neutral-300 text-zinc-900 dark:bg-zinc-900 dark:text-neutral-300">
    <Header />
    <div class="container grid grid-cols-1 gap-12 pt-8 lg:grid-cols-[1fr_240px] lg:pt-16">
      <main>
        <slot />
      </main>
      <Aside />
    </div>
    <footer class="container mt-48 flex h-12 items-center">
      <div class="text-sm">Copyright © Nymoréa. All Rights Reserved.</div>
    </footer>
  </body>
</html>
